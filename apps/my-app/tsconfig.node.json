{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "composite": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "Node",
    "types": ["node"]
  },
  "include": [
    "vite.config.*",
    "vitest.config.*",
    // TODO: pick when decided on e2e library
    "cypress.config.*",
    "playwright.config.*"
  ]
}
